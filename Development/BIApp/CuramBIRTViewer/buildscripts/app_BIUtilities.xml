<project name="BI Content Utilities">


  <import file="./app_BIproperties.xml"/>


  <target name="message">
    <tstamp>
      <format
        pattern="HH:mm:ss"
        property="time.now"
      />
    </tstamp>
    <echo message="${time.now} ${prm.msg}"/>
  </target>
  <!--=======================================
        Create required project directories
      =======================================-->


  <target name="biapp.initdirectories">


    <!-- resources  -->
    <echo message="BI Curam BIRT Viewer initialization:"/>
    <mkdir dir="${dir.biapp.webcontent.bicontent}"/>
    <!-- copy images to here-->
    <mkdir dir="${dir.biapp.webcontent.bicontent.resources}"/>
    <mkdir dir="${dir.biapp.webcontent.bicontent.resources}"/>
    <mkdir dir="${dir.biapp.webcontent.bicontent.scriptslib}"/>
    <mkdir dir="${dir.logs}"/>

    <mkdir dir="${dir.biapp.webcontent.webinf}/classes"/>
  </target>
  <target name="biapp.initdirectories.ear">


    <!-- resources  -->
    <echo message="BI Content Client Build Configuration:"/>
    <echo message="     sysenv.CURAM_DIR=${dir.CURAM_DIR}"/>
    <echo message="    sysenv.CLIENT_DIR=${dir.CLIENT_DIR}"/>
    <echo message="           dir.client=${dir.client}"/>


    <mkdir dir="${dir.logs}"/>


    <mkdir dir="${dir.biapp.bld}"/>
    <mkdir dir="${dir.biapp.bld.ear}"/>
    <mkdir dir="${dir.biapp.bld.ear.was}"/>
    <mkdir dir="${dir.biapp.bld.ear.wls}"/>


    <mkdir dir="${dir.biapp.bld.ear.was}/${dir.temp}"/>
    <mkdir dir="${dir.biapp.bld.ear.wls}/${dir.temp}"/>


  </target>


</project>

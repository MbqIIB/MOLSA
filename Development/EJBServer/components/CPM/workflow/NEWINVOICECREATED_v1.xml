      />
    </mapping>
  </enactment-mappings>
  <wdos>
    <wdo
      initialize-attributes="false"
      is-list-wdo="false"
    >
      <wdo-name>NewInvoiceCreatedDetails</wdo-name>
      <display-name>
        <localized-text>
          <locale language="en">New Invoice Created Details</locale>
        </localized-text>
      </display-name>
      <attributes>
        <attribute>
          <attribute-name>serviceInvoiceID</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">serviceInvoiceID</locale>
            </localized-text>
          </display-name>
          <type>INT64</type>
          <required-at-enactment>true</required-at-enactment>
        </attribute>
      </attributes>
    </wdo>
  </wdos>
  <activities>
    <start-process-activity id="1">
      <name>
        <localized-text>
          <locale language="en">Start Process Activity</locale>

      <locale language="en">Notifies the financial user when an external user submits a service invoice.</locale>
    </localized-text>
  </description>
  <!-- END, CR00248687 -->
  <enactment-mappings>
    <mapping>
      <source-attribute
        name="serviceInvoiceID"
        struct-name="curam.cpm.facade.struct.CreatedServiceInvoiceDetails"

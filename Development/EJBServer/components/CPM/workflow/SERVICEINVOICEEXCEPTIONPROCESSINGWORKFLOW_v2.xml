<!-- This workflow is used to generate a service invoice exception task.    -->
<workflow-process
  category="PC21"
  createdBy="admin"
  creationDate="20110504T115725"
  id="28535"
  language-version="1.0"
  process-version="2"
  released="true"
>
  <name>SERVICEINVOICEEXCEPTIONPROCESSINGWORKFLOW</name>


  <process-display-name>
    <localized-text>
      <locale language="en">Service Invoice line item exception processing workflow</locale>
    </localized-text>
  </process-display-name>


  <description>
    <localized-text>
      <locale language="en">Service Invoice line item exception processing workflow process.</locale>
    </localized-text>
  </description>
  <enactment-mappings>
    <mapping>
      <source-attribute
        name="serviceInvoiceLineItemID"
        struct-name="curam.cpm.workflowprocesses.financial.struct.SILIExceptionProcessingDescriptor"
      />
      <target-attribute
        name="serviceInvoiceLineItemID"
        wdo-name="SILIExceptionProcessingDescriptor"
      />
    </mapping>
  </enactment-mappings>
  <wdos>
    <wdo
      initialize-attributes="false"
      is-list-wdo="false"
    >
      <wdo-name>SILIExceptionProcessingDescriptor</wdo-name>
      <display-name>
        <localized-text>
          <locale language="en">SILI Exception Processing Descriptor</locale>
        </localized-text>
      </display-name>
      <attributes>
        <attribute>
          <attribute-name>serviceInvoiceLineItemID</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Service Invoice Line Item ID</locale>
            </localized-text>
          </display-name>
          <type>INT64</type>
          <required-at-enactment>true</required-at-enactment>
          <process-output>false</process-output>
        </attribute>
        <attribute>
          <attribute-name>exception</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Description of the exception that happened</locale>
            </localized-text>
          </display-name>
          <type>STRING</type>
          <required-at-enactment>false</required-at-enactment>
          <process-output>false</process-output>
        </attribute>
        <attribute>
          <attribute-name>referenceNumber</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Reference Number of the Service Invoice Line Item</locale>
            </localized-text>
          </display-name>
          <type>STRING</type>
          <required-at-enactment>false</required-at-enactment>
          <process-output>false</process-output>
        </attribute>
        <attribute>
          <attribute-name>serviceInvoiceID</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Service Invoice ID</locale>
            </localized-text>
          </display-name>
          <type>INT64</type>
          <required-at-enactment>false</required-at-enactment>
          <process-output>false</process-output>
        </attribute>
      </attributes>
    </wdo>
  </wdos>
  <activities>
    <start-process-activity id="1">
      <name>
        <localized-text>
          <locale language="en">Start Process Activity</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">The start process activity</locale>
        </localized-text>
      </description>
      <split type="none">
        <transition-id idref="1"/>
      </split>
    </start-process-activity>
    <end-process-activity id="2">
      <name>
        <localized-text>
          <locale language="en">End Process Activity</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">The end process activity</locale>
        </localized-text>
      </description>
      <join type="none"/>
    </end-process-activity>
    <automatic-activity
      category="AC1"
      id="4"
    >
      <name>
        <localized-text>
          <locale language="en">Get Reference Number and Exception for Service Invoice Line Item</locale>
        </localized-text>
      </name>
      <join type="none"/>
      <split type="none">
        <transition-id idref="3"/>
      </split>
      <bpo-mapping
        interface-name="curam.cpm.workflowprocesses.financial.intf.ServiceInvoiceWorkflowAllocation"
        method-name="readExceptionTaskDetailsAndInvoiceIDForSILI"
      >
        <formal-parameters>
          <formal-parameter index="0">
            <struct type="curam.cpm.sl.entity.struct.ServiceInvoiceLineItemKey">
              <field name="serviceInvoiceLineItemID">
                <base-type type="INT64">
                  <wdo-attribute
                    name="serviceInvoiceLineItemID"
                    wdo-name="SILIExceptionProcessingDescriptor"
                  />
                </base-type>
              </field>
            </struct>
          </formal-parameter>
        </formal-parameters>
        <return>
          <struct>
            <field name="referenceNumber">
              <base-type>
                <wdo-attribute
                  name="referenceNumber"
                  wdo-name="SILIExceptionProcessingDescriptor"
                />
              </base-type>
            </field>
            <field name="exception">
              <base-type>
                <wdo-attribute
                  name="exception"
                  wdo-name="SILIExceptionProcessingDescriptor"
                />
              </base-type>
            </field>
            <field name="serviceInvoiceID">
              <base-type>
                <wdo-attribute
                  name="serviceInvoiceID"
                  wdo-name="SILIExceptionProcessingDescriptor"
                />
              </base-type>
            </field>
          </struct>
        </return>
      </bpo-mapping>
    </automatic-activity>
    <manual-activity
      category="AC1"
      id="3"
    >
      <name>
        <localized-text>
          <locale language="en">Address exception raised while processing Service Invoice Line Item</locale>
        </localized-text>
      </name>
      <notification delivery-mechanism="DM1">
        <subject>
          <message>
            <message-text>
              <localized-text>
                <locale language="en">Service Invoice Line Item submitted for exception processing</locale>
              </localized-text>
            </message-text>
          </message>
        </subject>
        <body>
          <message>
            <message-text>
              <localized-text>
                <locale language="en">The Service invoice line item with reference number %1s, has been submitted for exception processing.</locale>
              </localized-text>
            </message-text>
            <message-parameters>
              <wdo-attribute
                name="referenceNumber"
                wdo-name="SILIExceptionProcessingDescriptor"
              />
            </message-parameters>
          </message>
        </body>
        <allocation-strategy
          identifier="curam.cpm.workflowprocesses.intf.WorkflowAllocationFunction.siliExceptionProcessingAllocationStrategy"
          type="function"
        >
          <function-mappings>
            <formal-parameters>
              <formal-parameter index="0">
                <struct type="curam.cpm.sl.entity.struct.ServiceInvoiceLineItemKey">
                  <field name="serviceInvoiceLineItemID">
                    <base-type type="INT64">
                      <wdo-attribute
                        name="serviceInvoiceLineItemID"
                        wdo-name="SILIExceptionProcessingDescriptor"
                      />
                    </base-type>
                  </field>
                </struct>
              </formal-parameter>
            </formal-parameters>
          </function-mappings>
        </allocation-strategy>
      </notification>
      <join type="none"/>
      <split type="none">
        <transition-id idref="2"/>
      </split>
      <task>
        <message>
          <message-text>
            <localized-text>
              <locale language="en">%1s</locale>
            </localized-text>
          </message-text>
          <message-parameters>
            <wdo-attribute
              name="exception"
              wdo-name="SILIExceptionProcessingDescriptor"
            />
          </message-parameters>
        </message>
        <actions>
          <action
            open-modal="true"
            page-id="ProviderManagement_processSILIException"
            principal-action="true"
          >
            <message>
              <message-text>
                <localized-text>
                  <!-- BEGIN, CR00306731, ASN -->
                  <locale language="en">Invoice Data Correction: Proceed to indicate that the service invoice line item should be re-submitted. If it is determined that correction of the service invoice line item is not possible, the service invoice line item may also be denied or deleted.</locale>
                  <!-- END, CR00306731 -->
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="serviceInvoiceLineItemID">
              <wdo-attribute
                name="serviceInvoiceLineItemID"
                wdo-name="SILIExceptionProcessingDescriptor"
              />
            </link-parameter>
            <link-parameter name="taskID">
              <wdo-attribute
                name="taskID"
                wdo-name="Context_Task"
              />
            </link-parameter>
          </action>
          <action
            open-modal="false"
            page-id="ProviderManagement_viewOpenServiceInvoiceLineItems"
            principal-action="false"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">Open Service Invoice Line Items</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="serviceInvoiceID">
              <wdo-attribute
                name="serviceInvoiceID"
                wdo-name="SILIExceptionProcessingDescriptor"
              />
            </link-parameter>
          </action>
        </actions>
        <allow-deadline-override>false</allow-deadline-override>
        <allow-task-forwarding>false</allow-task-forwarding>
      </task>
      <allocation-strategy
        identifier="curam.cpm.workflowprocesses.intf.WorkflowAllocationFunction.siliExceptionProcessingAllocationStrategy"
        type="function"
      >
        <function-mappings>
          <formal-parameters>
            <formal-parameter index="0">
              <struct type="curam.cpm.sl.entity.struct.ServiceInvoiceLineItemKey">
                <field name="serviceInvoiceLineItemID">
                  <base-type type="INT64">
                    <wdo-attribute
                      name="serviceInvoiceLineItemID"
                      wdo-name="SILIExceptionProcessingDescriptor"
                    />
                  </base-type>
                </field>
              </struct>
            </formal-parameter>
          </formal-parameters>
        </function-mappings>
      </allocation-strategy>
      <event-wait wait-on-all-events="false">
        <events>
          <event
            event-class="PROVIDERMANAGEMENT"
            event-type="SILIPROCESSED"
            identifier="1"
          >
            <event-match-attribute
              name="serviceInvoiceLineItemID"
              wdo-name="SILIExceptionProcessingDescriptor"
            />
          </event>
          <event
            event-class="PROVIDERMANAGEMENT"
            event-type="SILICANCELED"
            identifier="2"
          >
            <event-match-attribute
              name="serviceInvoiceLineItemID"
              wdo-name="SILIExceptionProcessingDescriptor"
            />
          </event>
          <event
            event-class="PROVIDERMANAGEMENT"
            event-type="SILIDENIED"
            identifier="3"
          >
            <event-match-attribute
              name="serviceInvoiceLineItemID"
              wdo-name="SILIExceptionProcessingDescriptor"
            />
          </event>
        </events>
      </event-wait>
    </manual-activity>
  </activities>
  <transitions>
    <transition
      from-activity-idref="1"
      id="1"
      to-activity-idref="4"
    />
    <transition
      from-activity-idref="3"
      id="2"
      to-activity-idref="2"
    />
    <transition
      from-activity-idref="4"
      id="3"
      to-activity-idref="3"
    />
  </transitions>
</workflow-process>

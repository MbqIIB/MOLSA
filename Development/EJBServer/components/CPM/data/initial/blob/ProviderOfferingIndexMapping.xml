<!-- The mapping file used by castor xml binding for updated indexes. -->
<mapping>
  <class
    auto-complete="false"
    name="curam.taxonomy.util.impl.ProviderOfferings"
  >
    <map-to xml="providerofferings"/>
    <field
      collection="arraylist"
      name="proivderOfferings"
      type="curam.taxonomy.util.impl.ProviderOffering"
    >
      <bind-xml name="provideroffering"/>
    </field>
  </class>
  <class
    auto-complete="false"
    name="curam.taxonomy.util.impl.ProviderOffering"
  >
    <map-to xml="provideroffering"/>
    <field
      name="poid"
      type="java.lang.String"
    >
      <bind-xml
        name="poid"
        node="element"
      />
    </field>
    <field
      collection="arraylist"
      name="indexedterms"
      type="curam.taxonomy.util.impl.POTaxonomy"
    >
      <bind-xml name="potaxonomy"/>
    </field>
  </class>
  <class
    auto-complete="false"
    name="curam.taxonomy.util.impl.POTaxonomy"
  >
    <map-to xml="potaxonomy"/>
    <field
      name="potaxonomyid"
      type="java.lang.Long"
    >
      <bind-xml
        name="potaxonomyid"
        node="element"
      />
    </field>
    <field
      collection="arraylist"
      name="term"
      type="curam.taxonomy.util.impl.Term"
    >
      <bind-xml name="term"/>
    </field>
  </class>
  <class
    auto-complete="false"
    name="curam.taxonomy.util.impl.Term"
  >
    <map-to xml="term"/>
    <field
      name="termid"
      type="java.lang.String"
    >
      <bind-xml
        name="termid"
        node="element"
      />
    </field>
    <field
      name="termcode"
      type="java.lang.String"
    >
      <bind-xml
        name="termcode"
        node="element"
      />
    </field>
    <field
      name="iscompoundindex"
      type="java.lang.String"
    >
      <bind-xml
        name="compoundedterms"
        node="element"
      />
    </field>
    <field
      name="noofservices"
      type="java.lang.Integer"
    >
      <bind-xml
        name="noofservices"
        node="element"
      />
    </field>
    <field
      collection="arraylist"
      name="termname"
      type="curam.taxonomy.util.impl.TermName"
    >
      <bind-xml name="termname"/>
    </field>
  </class>
  <class
    auto-complete="false"
    name="curam.taxonomy.util.impl.TermName"
  >
    <map-to xml="termname"/>
    <field
      name="termname"
      type="java.lang.String"
    >
      <bind-xml
        name="name"
        node="text"
      />
    </field>
    <field
      name="locale"
      type="java.lang.String"
    >
      <bind-xml
        name="locale"
        node="attribute"
      />
    </field>
  </class>
</mapping>

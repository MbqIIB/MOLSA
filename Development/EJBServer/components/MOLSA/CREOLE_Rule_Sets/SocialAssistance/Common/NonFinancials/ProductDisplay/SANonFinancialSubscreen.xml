<Class
  extends="DefaultProgramRecommendationSubscreenDisplay"
  extendsRuleSet="DefaultProgramRecommendationDisplayRuleSet"
  name="SANonFinancialSubscreen"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://www.curamsoftware.com/CreoleRulesSchema.xsd"
>


  <Initialization>
    <Attribute name="saNonFinancialsCPRCalculator">
      <type>
        <ruleclass
          name="SANonFinancialCPRCalculator"
          ruleset="SocialAssistanceRuleSet"
        />
      </type>
    </Attribute>
  </Initialization>


  <Attribute name="businessObjectID">
    <Annotations>
      <Display/>
    </Annotations>
    <type>
      <javaclass name="Number"/>
    </type>
    <derivation>
      <Number value="1"/>
    </derivation>
  </Attribute>


  <Attribute name="citizenshipRulesMessage">
    <Annotations>
      <Display/>
    </Annotations>
    <type>
      <javaclass name="curam.creole.value.Timeline">
        <javaclass name="curam.creole.value.Message"/>
      </javaclass>
    </type>
    <derivation>
      <timelineoperation>
        <choose>
          <type>
            <javaclass name="curam.creole.value.Message"/>
          </type>
          <when>
            <condition>
              <intervalvalue>
                <reference attribute="hasPassedCitizenshipTimeline">
                  <reference attribute="saNonFinancialsCPRCalculator"/>
                </reference>
              </intervalvalue>
            </condition>
            <value>
              <ResourceMessage
                key="NonFinancial.Citizenship.Citizen"
                resourceBundle="curam.molsa.rules.ProductDisplay"
              />
            </value>
          </when>
          <otherwise>
            <value>
              <ResourceMessage
                key="NonFinancial.Citizenship.FailsCitizenRules"
                resourceBundle="curam.molsa.rules.ProductDisplay"
              />
            </value>
          </otherwise>
        </choose>
      </timelineoperation>
    </derivation>
  </Attribute>
  <Attribute name="residencyRulesMessage">
    <Annotations>
      <Display/>
    </Annotations>
    <type>
      <javaclass name="curam.creole.value.Timeline">
        <javaclass name="curam.creole.value.Message"/>
      </javaclass>
    </type>
    <derivation>
      <timelineoperation>
        <choose>
          <type>
            <javaclass name="curam.creole.value.Message"/>
          </type>
          <when>
            <condition>
              <intervalvalue>
                <reference attribute="hasPassedResiencyTimeline">
                  <reference attribute="saNonFinancialsCPRCalculator"/>
                </reference>
              </intervalvalue>
            </condition>
            <value>
              <ResourceMessage
                key="NonFinancial.Residency.QatarResident"
                resourceBundle="curam.molsa.rules.ProductDisplay"
              />
            </value>
          </when>
          <otherwise>
            <value>
              <ResourceMessage
                key="NonFinancial.Residency.FailsResidency"
                resourceBundle="curam.molsa.rules.ProductDisplay"
              />
            </value>
          </otherwise>
        </choose>
      </timelineoperation>
    </derivation>
  </Attribute>

</Class>

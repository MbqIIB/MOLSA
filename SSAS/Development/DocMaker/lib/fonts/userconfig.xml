<?xml version="1.0" encoding="UTF-8"?>
<!--
Custom configuration file for FOP. This must be passed to the FOP task
to support fonts other than the basic 14 PDF fonts. The font base dir
can be specified here, but as the installation directory is not known
to FOP, the FOP task has been extended to support the specification of
the font base directory from the Ant script at runtime.
-->
<configuration>
  <fonts>
    <font
      kerning="yes"
      metrics-file="arialnarrow.xml"
    >
      <font-triplet
        name="ArialNarrowMS"
        style="normal"
        weight="normal"
      />
      <font-triplet
        name="ArialNarrow"
        style="normal"
        weight="normal"
      />
    </font>
    <font
      kerning="yes"
      metrics-file="arialnarrow-i.xml"
    >
      <font-triplet
        name="ArialNarrowMS"
        style="italic"
        weight="normal"
      />
      <font-triplet
        name="ArialNarrow"
        style="italic"
        weight="normal"
      />
    </font>
    <font
      kerning="yes"
      metrics-file="arialnarrow-b.xml"
    >
      <font-triplet
        name="ArialNarrowMS"
        style="normal"
        weight="bold"
      />
      <font-triplet
        name="ArialNarrow"
        style="normal"
        weight="bold"
      />
    </font>
    <font
      kerning="yes"
      metrics-file="arialnarrow-bi.xml"
    >
      <font-triplet
        name="ArialNarrowMS"
        style="italic"
        weight="bold"
      />
      <font-triplet
        name="ArialNarrow"
        style="italic"
        weight="bold"
      />
    </font>
    <font
      kerning="yes"
      metrics-file="trebuchet.xml"
    >
      <font-triplet
        name="TrebuchetMS"
        style="normal"
        weight="normal"
      />
      <font-triplet
        name="Trebuchet"
        style="normal"
        weight="normal"
      />
    </font>
    <font
      kerning="yes"
      metrics-file="trebuchet-i.xml"
    >
      <font-triplet
        name="TrebuchetMS"
        style="italic"
        weight="normal"
      />
      <font-triplet
        name="Trebuchet"
        style="italic"
        weight="normal"
      />
    </font>
    <font
      kerning="yes"
      metrics-file="trebuchet-b.xml"
    >
      <font-triplet
        name="TrebuchetMS"
        style="normal"
        weight="bold"
      />
      <font-triplet
        name="Trebuchet"
        style="normal"
        weight="bold"
      />
    </font>
    <font
      kerning="yes"
      metrics-file="trebuchet-bi.xml"
    >
      <font-triplet
        name="TrebuchetMS"
        style="italic"
        weight="bold"
      />
      <font-triplet
        name="Trebuchet"
        style="italic"
        weight="bold"
      />
    </font>
  </fonts>
</configuration>

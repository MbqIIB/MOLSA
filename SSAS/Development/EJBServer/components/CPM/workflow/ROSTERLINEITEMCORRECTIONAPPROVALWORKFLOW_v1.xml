<!-- This workflow is used to generate a service invoice exception task.    -->
<workflow-process
  category="PC21"
  createdBy="admin"
  creationDate="20090804T172725"
  id="28597"
  language-version="1.0"
  process-version="1"
  released="true"
>
  <name>ROSTERLINEITEMCORRECTIONAPPROVALWORKFLOW</name>


  <process-display-name>
    <localized-text>
      <locale language="en">Roster Line Item Correction Approval Workflow</locale>
    </localized-text>
  </process-display-name>


  <!-- BEGIN, CR00306765, AKr -->
  <description>
    <localized-text>
      <locale language="en">Notifies a user when a roster line item submitted with correction details is approved.</locale>
    </localized-text>
  </description>
  <!-- END, CR00306765 -->
  <enactment-mappings>
    <mapping>
      <source-attribute
        name="prliCorrectionID"
        struct-name="curam.cpm.sl.entity.struct.PRLICorrectionKey"
      />
      <target-attribute
        name="prliCorrectionID"
        wdo-name="PRLICorrectionApprovalDescriptor"
      />
    </mapping>
  </enactment-mappings>
  <wdos>
    <wdo
      initialize-attributes="false"
      is-list-wdo="false"
    >
      <wdo-name>PRLICorrectionApprovalDescriptor</wdo-name>
      <display-name>
        <localized-text>
          <locale language="en">PRLI Correction Approval Descriptor</locale>
        </localized-text>
      </display-name>
      <attributes>
        <attribute>
          <attribute-name>prliCorrectionID</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Provider Roster Line Item Correction ID</locale>
            </localized-text>
          </display-name>
          <type>INT64</type>
          <required-at-enactment>true</required-at-enactment>
          <process-output>false</process-output>
        </attribute>
        <attribute>
          <attribute-name>referenceNumber</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Reference Number of the Provider Roster Line Item</locale>
            </localized-text>
          </display-name>
          <type>STRING</type>
          <required-at-enactment>false</required-at-enactment>
          <process-output>false</process-output>
        </attribute>
      </attributes>
    </wdo>
  </wdos>
  <activities>
    <start-process-activity id="1">
      <name>
        <localized-text>
          <locale language="en">Start Process Activity</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">The start process activity</locale>
        </localized-text>
      </description>
      <split type="none">
        <transition-id idref="1"/>
      </split>
    </start-process-activity>
    <end-process-activity id="2">
      <name>
        <localized-text>
          <locale language="en">End Process Activity</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">The end process activity</locale>
        </localized-text>
      </description>
      <join type="none"/>
    </end-process-activity>
    <automatic-activity
      category="AC1"
      id="4"
    >
      <name>
        <localized-text>
          <locale language="en">Get Reference Number for Provider Roster Line Item Correction</locale>
        </localized-text>
      </name>
      <join type="none"/>
      <split type="none">
        <transition-id idref="1"/>
      </split>
      <bpo-mapping
        interface-name="curam.cpm.workflowprocesses.attendancetracking.intf.RosterWorkflowAllocation"
        method-name="readReferenceNumberForPRLICorrection"
      >
        <formal-parameters>
          <formal-parameter index="0">
            <struct type="curam.cpm.sl.entity.struct.PRLICorrectionKey">
              <field name="prliCorrectionID">
                <base-type type="INT64">
                  <wdo-attribute
                    name="prliCorrectionID"
                    wdo-name="PRLICorrectionApprovalDescriptor"
                  />
                </base-type>
              </field>
            </struct>
          </formal-parameter>
        </formal-parameters>
        <return>
          <struct>
            <field name="referenceNumber">
              <base-type>
                <wdo-attribute
                  name="referenceNumber"
                  wdo-name="PRLICorrectionApprovalDescriptor"
                />
              </base-type>
            </field>
          </struct>
        </return>
      </bpo-mapping>
    </automatic-activity>
    <manual-activity
      category="AC1"
      id="3"
    >
      <name>
        <localized-text>
          <locale language="en">Choose to approve or deny Roster Line Item Correction</locale>
        </localized-text>
      </name>
      <notification delivery-mechanism="DM1">
        <subject>
          <message>
            <message-text>
              <localized-text>
                <locale language="en">Roster Line Item Correction submitted for approval</locale>
              </localized-text>
            </message-text>
          </message>
        </subject>
        <body>
          <message>
            <message-text>
              <localized-text>
                <locale language="en">A correction for Provider Roster line item with reference number %1s, has been submitted for approval.</locale>
              </localized-text>
            </message-text>
            <message-parameters>
              <wdo-attribute
                name="referenceNumber"
                wdo-name="PRLICorrectionApprovalDescriptor"
              />
            </message-parameters>
          </message>
        </body>
        <allocation-strategy
          identifier="curam.cpm.workflowprocesses.intf.WorkflowAllocationFunction.prliExceptionProcessingAllocationStrategy"
          type="function"
        >
          <function-mappings>
            <formal-parameters>
              <formal-parameter index="0">
                <struct type="curam.core.sl.entity.struct.RosterLineItemKey">
                  <field name="rosterLineItemID">
                    <base-type type="INT64">
                      <wdo-attribute
                        name="prliCorrectionID"
                        wdo-name="PRLICorrectionApprovalDescriptor"
                      />
                    </base-type>
                  </field>
                </struct>
              </formal-parameter>
            </formal-parameters>
          </function-mappings>
        </allocation-strategy>
      </notification>
      <join type="none"/>
      <split type="none">
        <transition-id idref="2"/>
      </split>
      <task>
        <message>
          <message-text>
            <localized-text>
              <locale language="en">A correction for Provider Roster line item with reference number. %1s, has been submitted for approval.</locale>
            </localized-text>
          </message-text>
          <message-parameters>
            <wdo-attribute
              name="referenceNumber"
              wdo-name="PRLICorrectionApprovalDescriptor"
            />
          </message-parameters>
        </message>
        <actions>
          <action
            page-id="ProviderManagement_approveordenyPRLICorrection"
            principal-action="true"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">Roster Line Item Correction Approval: Proceed to indicate that the roster line item correction should be approved or denied.</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="prliCorrectionID">
              <wdo-attribute
                name="prliCorrectionID"
                wdo-name="PRLICorrectionApprovalDescriptor"
              />
            </link-parameter>
            <link-parameter name="taskID">
              <wdo-attribute
                name="taskID"
                wdo-name="Context_Task"
              />
            </link-parameter>
          </action>
          <action
            page-id="ProviderManagement_viewPRLICorrectionFromTask"
            principal-action="false"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">Roster Line Item Correction Home</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="prliCorrectionID">
              <wdo-attribute
                name="prliCorrectionID"
                wdo-name="PRLICorrectionApprovalDescriptor"
              />
            </link-parameter>
            <link-parameter name="taskID">
              <wdo-attribute
                name="taskID"
                wdo-name="Context_Task"
              />
            </link-parameter>
          </action>
        </actions>
        <allow-deadline-override>false</allow-deadline-override>
        <allow-task-forwarding>false</allow-task-forwarding>
      </task>
      <allocation-strategy
        identifier="curam.cpm.workflowprocesses.intf.WorkflowAllocationFunction.prliExceptionProcessingAllocationStrategy"
        type="function"
      >
        <function-mappings>
          <formal-parameters>
            <formal-parameter index="0">
              <struct type="curam.core.sl.entity.struct.RosterLineItemKey">
                <field name="rosterLineItemID">
                  <base-type type="INT64">
                    <wdo-attribute
                      name="prliCorrectionID"
                      wdo-name="PRLICorrectionApprovalDescriptor"
                    />
                  </base-type>
                </field>
              </struct>
            </formal-parameter>
          </formal-parameters>
        </function-mappings>
      </allocation-strategy>
      <event-wait wait-on-all-events="false">
        <events>
          <event
            event-class="ROSTER"
            event-type="PRLIC_APPROVED"
            identifier="3"
          >
            <event-match-attribute
              name="prliCorrectionID"
              wdo-name="PRLICorrectionApprovalDescriptor"
            />
          </event>
          <event
            event-class="ROSTER"
            event-type="PRLIC_DENIED"
            identifier="4"
          >
            <event-match-attribute
              name="prliCorrectionID"
              wdo-name="PRLICorrectionApprovalDescriptor"
            />
          </event>
        </events>
      </event-wait>
    </manual-activity>
  </activities>
  <transitions>
    <transition
      from-activity-idref="1"
      id="1"
      to-activity-idref="4"
    />
    <transition
      from-activity-idref="4"
      id="2"
      to-activity-idref="3"
    />
    <transition
      from-activity-idref="3"
      id="3"
      to-activity-idref="2"
    />
  </transitions>
</workflow-process>

<!--BEGIN, CR00235681, PM-->
<workflow-process
  category="PC21"
  id="11"
  language-version="1.0"
  process-version="1"
  released="true"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../CuramSDEJ_ZIP/lib/Workflow.xsd"
>
  <!--  END, CR00235681-->
  <name>ROSTEREXCEPTIONPROCESSING</name>


  <process-display-name>
    <localized-text>
      <locale language="en">Roster Exception Processing</locale>
    </localized-text>
  </process-display-name>


  <!-- BEGIN, CR00248687, NS -->
  <description>
    <localized-text>
      <locale language="en">This process creates a task for a work queue when there is insufficient data to match a roster line item with a service authorisation line item. Any user who has subscribed to this work queue can view and reserve the task.</locale>
    </localized-text>
  </description>
  <!-- END, CR00248687 -->
  <enactment-mappings>
    <mapping>
      <source-attribute
        name="rosterLineItemID"
        struct-name="curam.cpm.workflowprocesses.attendancetracking.struct.RosterLineItemExceptionProcessingDescriptor"
      />
      <target-attribute
        name="rosterLineItemID"
        wdo-name="RosterLineItemExceptionProcessingDescriptor"
      />
    </mapping>
    <mapping>
      <source-attribute
        name="exception"
        struct-name="curam.cpm.workflowprocesses.attendancetracking.struct.RosterLineItemExceptionProcessingDescriptor"
      />
      <target-attribute
        name="exception"
        wdo-name="RosterLineItemExceptionProcessingDescriptor"
      />
    </mapping>
    <mapping>
      <source-attribute
        name="referenceNumber"
        struct-name="curam.cpm.workflowprocesses.attendancetracking.struct.RosterLineItemExceptionProcessingDescriptor"
      />
      <target-attribute
        name="referenceNumber"
        wdo-name="RosterLineItemExceptionProcessingDescriptor"
      />
    </mapping>
  </enactment-mappings>
  <wdos>
    <wdo
      initialize-attributes="false"
      is-list-wdo="false"
    >
      <wdo-name>RosterLineItemExceptionProcessingDescriptor</wdo-name>
      <display-name>
        <localized-text>
          <locale language="en">Roster Line Item Exception Processing Descriptor</locale>
        </localized-text>
      </display-name>
      <attributes>
        <attribute>
          <attribute-name>rosterLineItemID</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Roster Line Item ID</locale>
            </localized-text>
          </display-name>
          <type>INT64</type>
          <required-at-enactment>true</required-at-enactment>
        </attribute>
        <attribute>
          <attribute-name>exception</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Description of the exception that happened</locale>
            </localized-text>
          </display-name>
          <type>STRING</type>
          <required-at-enactment>true</required-at-enactment>
        </attribute>
        <attribute>
          <attribute-name>referenceNumber</attribute-name>
          <display-name>
            <localized-text>
              <locale language="en">Reference Number of the Roster Line Item</locale>
            </localized-text>
          </display-name>
          <type>STRING</type>
          <required-at-enactment>true</required-at-enactment>
        </attribute>
      </attributes>
    </wdo>
  </wdos>
  <activities>
    <start-process-activity id="1">
      <name>
        <localized-text>
          <locale language="en">Start Process Activity</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">The start process activity</locale>
        </localized-text>
      </description>
      <split type="none">
        <transition-id idref="1"/>
      </split>
    </start-process-activity>
    <end-process-activity id="2">
      <name>
        <localized-text>
          <locale language="en">End Process Activity</locale>
        </localized-text>
      </name>
      <description>
        <localized-text>
          <locale language="en">The end process activity</locale>
        </localized-text>
      </description>
      <join type="none"/>
    </end-process-activity>
    <manual-activity
      category="AC1"
      id="3"
    >
      <name>
        <localized-text>
          <locale language="en">Address exception raised while processing Roster Line Item</locale>
        </localized-text>
      </name>
      <notification delivery-mechanism="DM1">
        <subject>
          <message>
            <message-text>
              <localized-text>
                <locale language="en">Roster Line Item submitted for exception processing</locale>
              </localized-text>
            </message-text>
          </message>
        </subject>
        <body>
          <message>
            <message-text>
              <localized-text>
                <locale language="en">The Roster line item with reference number %1 has been submitted for exception processing.</locale>
              </localized-text>
            </message-text>
            <message-parameters>
              <wdo-attribute
                name="referenceNumber"
                wdo-name="RosterLineItemExceptionProcessingDescriptor"
              />
            </message-parameters>
          </message>
        </body>
        <allocation-strategy
          identifier="curam.cpm.workflowprocesses.intf.WorkflowAllocationFunction.prliExceptionProcessingAllocationStrategy"
          type="function"
        >
          <function-mappings>
            <formal-parameters>
              <formal-parameter index="0">
                <struct type="curam.core.sl.entity.struct.RosterLineItemKey">
                  <field name="rosterLineItemID">
                    <base-type type="INT64">
                      <wdo-attribute
                        name="rosterLineItemID"
                        wdo-name="RosterLineItemExceptionProcessingDescriptor"
                      />
                    </base-type>
                  </field>
                </struct>
              </formal-parameter>
            </formal-parameters>
          </function-mappings>
        </allocation-strategy>
      </notification>
      <join type="none"/>
      <split type="none">
        <transition-id idref="2"/>
      </split>
      <task>
        <message>
          <message-text>
            <localized-text>
              <locale language="en">%1s</locale>
            </localized-text>
          </message-text>
          <message-parameters>
            <wdo-attribute
              name="exception"
              wdo-name="RosterLineItemExceptionProcessingDescriptor"
            />
          </message-parameters>
        </message>
        <actions>
          <action
            page-id="ProviderManagement_processRosterLineItemException"
            principal-action="true"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">Roster Data Correction: Proceed to
                    indicate that the roster line item should be re-evaluated, denied or deleted.</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="rosterLineItemID">
              <wdo-attribute
                name="rosterLineItemID"
                wdo-name="RosterLineItemExceptionProcessingDescriptor"
              />
            </link-parameter>
            <!-- BEGIN, CR00132858, RPB -->
            <link-parameter name="taskID">
              <wdo-attribute
                name="taskID"
                wdo-name="Context_Task"
              />
            </link-parameter>
            <!-- END, CR00132858 -->
          </action>
          <action
            page-id="ProviderManagement_viewEPRosterLineItem"
            principal-action="false"
          >
            <message>
              <message-text>
                <localized-text>
                  <locale language="en">Roster Line Item Home</locale>
                </localized-text>
              </message-text>
            </message>
            <link-parameter name="rosterLineItemID">
              <wdo-attribute
                name="rosterLineItemID"
                wdo-name="RosterLineItemExceptionProcessingDescriptor"
              />
            </link-parameter>
          </action>
        </actions>
      </task>
      <allocation-strategy
        identifier="curam.cpm.workflowprocesses.intf.WorkflowAllocationFunction.prliExceptionProcessingAllocationStrategy"
        type="function"
      >
        <function-mappings>
          <formal-parameters>
            <formal-parameter index="0">
              <struct type="curam.core.sl.entity.struct.RosterLineItemKey">
                <field name="rosterLineItemID">
                  <base-type type="INT64">
                    <wdo-attribute
                      name="rosterLineItemID"
                      wdo-name="RosterLineItemExceptionProcessingDescriptor"
                    />
                  </base-type>
                </field>
              </struct>
            </formal-parameter>
          </formal-parameters>
        </function-mappings>
      </allocation-strategy>
      <event-wait wait-on-all-events="false">
        <events>
          <event
            event-class="ROSTER"
            event-type="PRLI_PROCESSED"
            identifier="1"
          >
            <event-match-attribute
              name="rosterLineItemID"
              wdo-name="RosterLineItemExceptionProcessingDescriptor"
            />
          </event>
          <event
            event-class="ROSTER"
            event-type="PRLI_CANCELED"
            identifier="2"
          >
            <event-match-attribute
              name="rosterLineItemID"
              wdo-name="RosterLineItemExceptionProcessingDescriptor"
            />
          </event>
          <event
            event-class="ROSTER"
            event-type="PRLI_DENIED"
            identifier="3"
          >
            <event-match-attribute
              name="rosterLineItemID"
              wdo-name="RosterLineItemExceptionProcessingDescriptor"
            />
          </event>
        </events>
      </event-wait>
    </manual-activity>
  </activities>
  <transitions>
    <transition
      from-activity-idref="1"
      id="1"
      to-activity-idref="3"
    />
    <transition
      from-activity-idref="3"
      id="2"
      to-activity-idref="2"
    />
  </transitions>
</workflow-process>

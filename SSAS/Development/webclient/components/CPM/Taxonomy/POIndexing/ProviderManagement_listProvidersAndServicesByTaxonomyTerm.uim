<!-- This page allows list the providers and services with taxonomy term.   -->
<PAGE
  PAGE_ID="ProviderManagement_listProvidersAndServicesByTaxonomyTerm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>


  <PAGE_TITLE>
    <CONNECT>
      <SOURCE
        NAME="TEXT"
        PROPERTY="PageTitle.StaticText1"
      />
    </CONNECT>
    <CONNECT>
      <SOURCE
        NAME="DISPLAY"
        PROPERTY="result$taxonomyTermName"
      />
    </CONNECT>


  </PAGE_TITLE>
  <PAGE_PARAMETER NAME="taxonomyTermID"/>
  <PAGE_PARAMETER NAME="searchInd"/>
  <PAGE_PARAMETER NAME="providerOfferingID"/>


  <SERVER_INTERFACE
    CLASS="POTaxonomyIndexing"
    NAME="DISPLAY"
    OPERATION="listProviderAndServiceByTerm"
    PHASE="DISPLAY"
  />


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="taxonomyTermID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$indexedTermIDs"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="providerOfferingID"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$providerOfferingID"
    />
  </CONNECT>


  <CONNECT>
    <SOURCE
      NAME="PAGE"
      PROPERTY="searchInd"
    />
    <TARGET
      NAME="DISPLAY"
      PROPERTY="key$searchInd"
    />
  </CONNECT>


  <LIST>


    <FIELD LABEL="Field.Label.Service">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$list$serviceName"
        />
      </CONNECT>
    </FIELD>
    <FIELD LABEL="Field.Label.Provider">
      <CONNECT>
        <SOURCE
          NAME="DISPLAY"
          PROPERTY="result$list$providerName"
        />
      </CONNECT>
    </FIELD>


  </LIST>


  <ACTION_SET
    ALIGNMENT="CENTER"
    TOP="false"
  >
    <ACTION_CONTROL LABEL="ActionControl.Label.Close">          
              </ACTION_CONTROL>


  </ACTION_SET>


</PAGE>

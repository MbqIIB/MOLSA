<!-- This is the resolve the payament type for provider page  -->
<PAGE
  PAGE_ID="ProviderManagement_resolveViewPlacementPaymentTypesForProvider"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="file://Curam/UIMSchema.xsd"
>
  <JSP_SCRIPTLET>
        
        
        curam.omega3.request.RequestHandler 
        rh = curam.omega3.request.RequestHandlerFactory.getRequestHandler(request);
        
        String context = request.getContextPath() + "/";
        context += curam.omega3.user.UserPreferencesFactory.getUserPreferences(pageContext.getSession()).getLocale() + "/"; 
        String placementID = request.getParameter("placementID");
        String InstructionLineItemID = request.getParameter("InstructionLineItemID");
        String finInstructionID = request.getParameter("finInstructionID");
        String pageContextDescription = request.getParameter("pageContextDescription");
        String url = "";
        
        //Get the description here and pass as page parameter, because the pages are expecting it to be passed.
        curam.interfaces.ActivityPkg.Activity_readContextDescription_TH 
        th = new curam.interfaces.ActivityPkg.Activity_readContextDescription_TH();
        
        if ("0".equals(placementID)) {
        
        url = context + "ProviderManagement_viewBenefitUnderPaymentInstructionPage.do?";
        }
        else {
        
        url = context + "ProviderManagement_viewPlacementPaymentForProviderPage.do?";
        }
        
        url += "placementID=" + curam.omega3.request.RequestUtils.escapeURL(placementID) + "&amp;InstructionLineItemID=" + curam.omega3.request.RequestUtils.escapeURL(InstructionLineItemID) + "&amp;finInstructionID=" + curam.omega3.request.RequestUtils.escapeURL(finInstructionID) + "&amp;pageContextDescription=" + curam.omega3.request.RequestUtils.escapeURL(pageContextDescription);
        url += "&amp;" + rh.getSystemParameters();
        response.sendRedirect(response.encodeRedirectURL(url));
        
        
    </JSP_SCRIPTLET>
</PAGE>

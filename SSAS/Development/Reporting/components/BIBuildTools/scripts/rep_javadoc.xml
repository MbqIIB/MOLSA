<?xml version="1.0" encoding="ISO-8859-1"?>
<project
  default="generate.javadoc"
  name="bitoolsdoc"
>

  <property environment="sysenv."/>

  <!--  ******************************************************************  -->
  <!--  ***  Import Properties                                         ***  -->
  <!--  ******************************************************************  -->
  <import file="${REPORTING_ENV}/scripts/rep_properties.xml"/> 
  
      <path id="javadoc.classpath">         
          <fileset dir="${REPORTING_ENV}/jar">             
            <include name="*.jar"/>         
          </fileset>   
          <fileset dir="${param.component.name}/jar">             
            <include name="*.jar"/>         
          </fileset> 
         <fileset dir="${sysenv.REPORTING_ENV}/lib">             
            <include name="*.jar"/>         
          </fileset>           
         <fileset dir="${sysenv.REPORTING_ENV}/lib-ext">             
            <include name="*.jar"/>         
          </fileset> 
          <fileset file="${sysenv.JAVA_HOME}/lib/tools.jar"/>
     </path> 
     
  <target name="generate.javadoc">
    <echo message="Create external and internal javadocs for the Curam BI Build Tools project"/>
    <echo message="writing to ${param.javadocsoutputdir} ${param.component.name}"/>
    <echo message="java file are ${param.javadocspath}"/>
    <echo message="java home ${sysenv.JAVA_HOME}"/>    
    <echo message="  "/>
    

  <mkdir dir="${param.javadocsoutputdir}"/>

<!--  add these in later
header="${server.component}"
windowtitle="${server.component}">
-->      
   <javadoc   
     footer="Licensed Materials - Property of IBM&lt;br&gt;&lt;br&gt;Copyright IBM Corporation 2012. All rights reserved.&lt;br&gt;US Government Users Restricted Rights - Use, duplication or disclosure&lt;br&gt;restricted by GSA ADP Schedule Contract with IBM Corp."   
     breakiterator="true"
     windowtitle="Curam Reporting API Documentation"    
     doctitle="${param.doctitle}"
     source="1.5"
     access="public"           
     destdir="${param.javadocsoutputdir}/api"           
     author="false"   
     splitindex="true"
     version="false"        
     includenosourcepackages="true"    
     use="true"    
      nodeprecated="false"
      nodeprecatedlist="false"
      noindex="false"
      nonavbar="false"
      notree="false"     
     verbose="false">        
     
     <fileset refid="${param.javadocspath}">                  
     </fileset> 
     <classpath refid="javadoc.classpath"/>         

      
     <link href="http://java.sun.com/j2se/1.5.0/docs/api/"/>
     <tag name="curam.nonimplementable" scope="all" description="Blackbox component:do not customize or subclass, contains interal interfaces or internal implementation or class with no configuration point to inject subclasses."/>      
   </javadoc>
  <zip destfile="${param.javadocsoutputdir}/api.zip">
    <fileset dir="${param.javadocsoutputdir}/api"/>
  </zip>



  </target>


 <target name="generate.javadoc.external">
    <echo message="Creates external javadoc for the Curam BI Build Tools project"/>
    <echo message="writing to ${param.javadocsoutputdir} ${param.component.name}"/>
    <echo message="java file are ${param.javadocspath}"/>
    <echo message=" ${jar.reporting.doctasks} "/>
    

  <mkdir dir="${param.javadocsoutputdir}"/>
 <!--  add these in later
header="${server.component}"
windowtitle="${server.component}">
-->      
   <javadoc   
     footer="Licensed Materials - Property of IBM&lt;br&gt;&lt;br&gt;Copyright IBM Corporation 2012. All rights reserved.&lt;br&gt;US Government Users Restricted Rights - Use, duplication or disclosure&lt;br&gt;restricted by GSA ADP Schedule Contract with IBM Corp."   
     breakiterator="true"
     windowtitle="Curam Reporting API Documentation"    
     doctitle="${param.doctitle}"  
     source="1.5"
     access="public"           
     destdir="${param.javadocsoutputdir}/api"           
     author="false"   
     splitindex="true"
     version="true"        
     includenosourcepackages="true"    
     use="true"    
      nodeprecated="false"
      nodeprecatedlist="false"
      noindex="false"
      nonavbar="false"
      notree="false"     
      verbose="false"
      doclet="curam.util.reporting.internal.apidoc.BIAPIDoclet"
      docletpath="${jar.reporting.doctasks}">        
     
     <fileset refid="${param.javadocspath}">                  
     </fileset> 
     <classpath refid="javadoc.classpath"/>         

      
     <link href="http://java.sun.com/j2se/1.5.0/docs/api/"/>
     <taglet name="curam.util.reporting.internal.apidoc.BIBusinessObjectRead">
           <path refid="jar.reporting.doctasks.refid"/>
     </taglet>
     <taglet name="curam.util.reporting.internal.apidoc.BIBusinessObjectWrite">
           <path refid="jar.reporting.doctasks.refid"/>
      </taglet>
      
   </javadoc>
   <zip destfile="${param.javadocsoutputdir}/api.zip">
     <fileset dir="${param.javadocsoutputdir}/api"/>
   </zip>



  </target> 
</project>
